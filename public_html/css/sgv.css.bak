#cplScope {
    text-align: center;
    padding: 5px;
    margin: 5px 0 5px 0;
    border-top: 1px solid black;
    border-bottom: 1px solid black;
}

dialog.sgvModalDialog {
    width: fit-content;
    height: fit-content;
    transition: transform var(--ease-elastic-4);
    transform: translateY(calc(var(--hide, 1) * 100vmin));
}

dialog.sgvModalDialog[open] {
    --hide: 0;
}

dialog.sgvModalDialog::backdrop {
    background: hsl(0 0% 10% / 0.5);
    backdrop-filter: blur(2px);
}


dialog#sgvDlgCreateGraph {
    background: rgba(0, 0, 0, 0.3);
       border-width: 1px;
    border-radius: 10px;
}

dialog#sgvDlgCreateGraph .content {
    background: 0;
    color: #fff;
}

dialog#sgvDlgCreateGraph .title {
    background-color: rgba(0, 0, 0, 0.5);
    color: #ddd;
    border-top-left-radius: 8px;
    border-top-right-radius: 8px;
}

dialog#sgvDlgCreateGraph .actionbutton {
    background-color: rgba(0, 0, 0, 0.5);
    color: #ddd;
    border: solid 1px #888;
    border-radius: 5px;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

dialog#loaderSplash {
  border:0;
  text-align: center;
  background: rgba(0, 0, 0, 0.0);
  font-size: var(--font-size-fluid-2);
  font-weight: var(--font-weight-6);
}

dialog#loaderSplash span {
    color: #fff;
  /*animation: wiggle 3s infinite;
  display: inline-block;
  transform-origin: 65%;*/
}

dialog#loaderSplash div.loader {
  margin: auto;
  border: 12px solid #f3f3f3; /* Light grey */
  border-top: 12px solid blue;
  border-right: 12px solid green;
  border-bottom: 12px solid red;
  border-left: 12px solid yellow;
  border-radius: 50%;
  width: 80px;
  height: 80px;
  animation: spin 2s linear infinite;
}
