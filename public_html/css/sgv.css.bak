#sgvWorkspaceArea {
    float:none;
    clear:both;
    width:100%;
    height:100%;
    margin: 0;
}

#sgvRenderCanvas {
    position:relative;
    height: 100%;
    width: 100%;
    object-fit:cover;
    /*touch-action: none;*/
}

.sgvUIwindow {
    position:fixed;
    left:0;
    top:0;
    z-index:100;
    background-color: #cfc;
    height: auto;
    width: auto;
    padding:1px;
    display: block;
}

.sgvUIwindow .content {
    padding: 4px;
    background-color: #fff;
    height: auto;
    width: auto;
}

.sgvUIwindow .title {
    background-color: #00f;
    color: #fff;
    text-align: center;
    font-family:sans-serif;
    font-weight:bold;
}

.sgvUIwindow .hidebutton {
    float: right;
    background-color: #fff;
    color: #00f;
    font-weight:normal;
    font-size: 10px;
    border: solid 1px #000;
}

.sgvUIwindow .delbutton {
    width: 100%;
    margin-top: 15px;
    background-color: #f00;
    color: #fff;
    border: solid 1px #000;
}

.sgvUIwindow .actionbutton {
    width: 50%;
    margin-top: 15px;
    margin-left: 25%;
    background-color: #00f;
    color: #fff;
    border: solid 1px #000;
}

.sgvUIwindow .setvaluebutton {
    background-color: #080;
    color: #fff;
}

.sgvUIwindow .setvaluebutton:disabled {
    background-color: #888;
    color: #aaa;
}

.sgvUIwindow #wagaN:disabled {
    background-color: #ddd;
    color: #ccc;
}

